<Window x:Class="GestionDeRopaCSharp.view.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionDeRopaCSharp.view"
        mc:Ignorable="d"
        Title="Dashboard" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="10"
        BorderThickness="5">
        
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <!--MENU NAVEGACION-->
                <ColumnDefinition Width="250"/>
                <!--CONTENIDO-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!--MENU NAVEGACION-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="1"/>
                    </LinearGradientBrush>    
                </Border.Background>

                <StackPanel>
                    <!--LOGO-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,15,0,40">
                        <Image Source="/utils/loginIco.png" Height="30"/>
                        <TextBlock Text="Dashboard"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                        
                        <Button x:Name="btnMinimize"
                                BorderThickness="0"
                                Content="&#xE748;"
                                Foreground="White"
                                FontSize="16"
                                FontFamily="Segoe MDL2 Assets"
                                Cursor="Hand"
                                Grid.Column="1"
                                Margin="55,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource btnMinimizeColor1}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource btnMinimizeColor2}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="30"
                                             Height="30"
                                             CornerRadius="9"
                                             Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--CONTENIDO-->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">

                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>
    </Border>
</Window>
