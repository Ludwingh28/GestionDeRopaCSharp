<Window x:Class="GestionDeRopaCSharp.view.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionDeRopaCSharp.view"
        mc:Ignorable="d"
        Title="Dashboard" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="10"
        BorderThickness="5">
        
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <!--MENU NAVEGACION-->
                <ColumnDefinition Width="250"/>
                <!--CONTENIDO-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!--MENU NAVEGACION-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="1"/>
                    </LinearGradientBrush>    
                </Border.Background>

                <StackPanel>
                    <!--LOGO-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,15,0,40">
                        <Image Source="/Utils/handWelcome.png" Height="30"/>
                        <TextBlock Text="Bienvenido"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                        
                        <Button x:Name="btnCloseSession"
                                BorderThickness="0"
                                Content="&#xE748;"
                                Foreground="White"
                                FontSize="16"
                                FontFamily="Segoe MDL2 Assets"
                                Cursor="Hand"
                                Grid.Column="1"
                                Margin="55,0,0,0"
                                Click="btnCloseSession_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource btnMinimizeColor1}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource btnMinimizeColor2}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="30"
                                             Height="30"
                                             CornerRadius="9"
                                             Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                    <!-- Botones de navegación -->
                    <RadioButton Style="{StaticResource NavigationButtonStyle}"
                  Content="Dashboard"
                  Tag="/Utils/homeWhite.png"
                  Margin="0,0,0,15" IsChecked="True"/>

                    <RadioButton Style="{StaticResource NavigationButtonStyle}"
                  Content="Ventas"
                  Tag="/Utils/salesWhite.png"
                  Margin="0,0,0,15"/>

                    <RadioButton Style="{StaticResource NavigationButtonStyle}"
                  Content="Stock Disponible"
                  Tag="/Utils/inventoryWhite.png"
                  Margin="0,0,0,15"/>

                    <RadioButton Style="{StaticResource NavigationButtonStyle}"
                  Content="Registrar Ingreso de Productos"
                  Tag="/Utils/entryWhite.png"
                  Margin="0,0,0,15"/>

                    <RadioButton Style="{StaticResource NavigationButtonStyle}"
                  Content="Gestión de Productos"
                  Tag="/Utils/managementWhite.png"
                  Margin="0,0,0,15"/>

                    <RadioButton Style="{StaticResource NavigationButtonStyle}"
                  Content="Reportes"
                  Tag="/Utils/reportWhite.png"
                  Margin="0,0,0,15"/>

                    <RadioButton Style="{StaticResource NavigationButtonStyle}"
                  Content="Soporte"
                  Tag="/Utils/supportWhite.png"
                  Margin="0,0,0,15"/>
                </StackPanel>
            </Border>

            <!--CONTENIDO-->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">

                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control bar-->
                        <RowDefinition Height="25"/>
                        <!--Header /Captio-->
                        <RowDefinition Height="35"/>
                        <!--Content child-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!--Control bar-->
                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,1,0"
                                MouseLeftButtonDown="Window_MouseDown"
                                MouseEnter="pnlControlBar_MouseEnter">

                        <Button x:Name="btnClose"
                                BorderThickness="0"
                                Content="&#xE711;"
                                Foreground="White"
                                FontSize="16"
                                FontFamily="Segoe MDL2 Assets"
                                Click="btnCloseApp">      
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource color4}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="35"
                                            CornerRadius="4"
                                            Background="{TemplateBinding Background}"> 
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="btnMaximize"
                                        BorderThickness="0"
                                        Content="&#xE740;"
                                        Foreground="White"
                                        FontSize="16"
                                        FontFamily="Segoe MDL2 Assets"
                                        Click="btnMaximizeApp">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource color5}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="35"
                                            CornerRadius="4"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="btnMinimize"
                                BorderThickness="0"
                                Content="&#xE738;"
                                Foreground="White"
                                FontSize="16"
                                FontFamily="Segoe MDL2 Assets"
                                Click="btnMinimizeApp">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource color8}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="35"
                                            CornerRadius="4"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
