<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">  

   <!-- Brush Resources -->  
   <SolidColorBrush x:Key="ButtonNormalBrush" Color="Transparent"/>  
   <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource primaryBackColor1}"/>  
   <SolidColorBrush x:Key="ButtonSelectedBrush" Color="{StaticResource winBorderColor1}"/>  
   <SolidColorBrush x:Key="ButtonForegroundBrush" Color="White"/>  

   <!-- Navigation Button Style -->  
   <Style x:Key="NavigationButtonStyle" TargetType="Button">  
       <Setter Property="Background" Value="{StaticResource ButtonNormalBrush}"/>  
       <Setter Property="Foreground" Value="{StaticResource ButtonForegroundBrush}"/>  
       <Setter Property="FontFamily" Value="Montserrat"/>  
       <Setter Property="FontSize" Value="20"/>  
       <Setter Property="FontWeight" Value="Medium"/>  
       <Setter Property="MinHeight" Value="50"/>  
       <Setter Property="Width" Value="250"/>  
       <Setter Property="Cursor" Value="Hand"/>  
       <Setter Property="BorderThickness" Value="0"/>  
       <Setter Property="Template">  
           <Setter.Value>  
               <ControlTemplate TargetType="Button">  
                   <Border x:Name="bd"  
                           Background="{TemplateBinding Background}"  
                           CornerRadius="5"  
                           Padding="10,5">  
                       <StackPanel Orientation="Horizontal">  
                           <Image x:Name="Icon"  
                                  Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"  
                                  Height="30"
                                  Width="30"
                                  VerticalAlignment="Center"/>  

                           <TextBlock x:Name="Label"  
                                      Text="{TemplateBinding Content}"  
                                      TextWrapping="Wrap"  
                                      TextAlignment="Left"  
                                      VerticalAlignment="Center"  
                                      Margin="20,0,0,0"  
                                      MaxWidth="180"/>  
                       </StackPanel>  
                   </Border>  
                   <ControlTemplate.Triggers>  
                       <Trigger Property="IsMouseOver" Value="True">  
                           <Setter TargetName="bd"  
                                   Property="Background"  
                                   Value="{StaticResource ButtonHoverBrush}"/>  
                       </Trigger>  
                       <Trigger Property="IsPressed" Value="True">  
                           <Setter TargetName="bd"  
                                   Property="Background"  
                                   Value="{StaticResource ButtonSelectedBrush}"/>  
                       </Trigger>  
                       <Trigger Property="IsEnabled" Value="False">  
                           <Setter TargetName="bd"  
                                   Property="Opacity"  
                                   Value="0.6"/>  
                       </Trigger>  
                   </ControlTemplate.Triggers>  
               </ControlTemplate>  
           </Setter.Value>  
       </Setter>  
   </Style>  
</ResourceDictionary>